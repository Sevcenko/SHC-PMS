	<div class="col-md-4 new_patient">
	  	<%= link_to "+ New Patient", new_patient_path(@patient), :class => 'btn btn-success' %>
	</div>
	<div class="col-md-4">
		<form class="navbar-form" role="search">
			<div class="custom-search-input">
				<div class="form-group">
					<%= form_tag(patients_path, method: "get", id: "search-form") do %>
						<%= text_field_tag :search, params[:search], class: "form-control", placeholder: "Search" %>
						<%= button_tag(class: "btn btn-info btn-lg", type: "submit") do %>
							<i class="glyphicon glyphicon-search"></i>
						<% end %>
					<% end %>
				</div>
			</div>
		</form>
	</div>
</div>
<!--<hr/>-->

<% @patients.each do |patient| %>
	<div class="container">
		<div class="well">
			<table class="table">
			  <thead class="thead-dark">
			    <tr>
			      <th scope="col">Name</th>
			      <th scope="col">Surname</th>
			      <th scope="col">DOB</th>
			      <th scope="col">Email</th>
			    </tr>
			  </thead>
			  <tbody>
			    <tr>
			      <td><%= patient.name.humanize %></td>
			      <td><%= patient.surname.humanize %></td>
			      <td><%= patient.birthday %></td>
			      <td><%= patient.email %></td>
			    </tr>
			  </tbody>
			</table>
			<%= link_to "Read More", patient_path(patient), :class => 'btn btn-default' %>
		</div>
	</div>
<% end %>