<!DOCTYPE html>
<html>
  <head>
    <title>SHCPms</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag 'https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css' %>
    <%= stylesheet_link_tag 'https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.4.1/css/bootstrap-datepicker3.css' %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    <%= javascript_include_tag 'https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js' %>
    <%= javascript_include_tag 'https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js' %>
    <%= javascript_include_tag 'https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.4.1/js/bootstrap-datepicker.min.js' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>


  </head>

  <body>

  	<nav class="navbar navbar-default">
      <div class="container">
      	<div class="navbar-header">
	      	<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
	      		<span class="sr-only">Toggle navigation</span>
        	    <span class="icon-bar"></span>
        	    <span class="icon-bar"></span>
        	    <span class="icon-bar"></span>
	      	</button>
	      	<a class="navbar-brand" href="">SHC-PMS</a>
	    </div>
	    <div id="navbar" class="collapse navbar-collapse">
	    	<ul class="nav navbar-nav">
	    		<li><%= link_to "Pateints", patients_path %></li>
          <li><%= link_to "Appointments", appointments_path, id: 'appointment-button' %></li>
          <li><%= link_to "Doctors", doctors_path %></li>
	    	</ul>
	    	
	    	<ul class="nav navbar-nav navbar-right">
          
          

          <% if !logged_in? %>
	    		<li><%= link_to "Login", login_path %></li>
          <% else %>
          <% doctor = current_doctor %>
          <li style="padding-top: 10px; color:#42f483; font-size: 20px;">Hello, <strong style="color:#6504f7"><%= doctor.name %></strong></li>
            
          <li><%= link_to "Logout", logout_path, method: :delete %></li>
          <% end %>
	    	</ul>
	    </div>      
      </div>
    </nav>

  	<div class="container">
      <% flash.each do |type, message| %>
        <div class="alert alert-<%= type %>"><%= message %></div>
      <% end %>
    	<%= yield %>
	</div>
  </body>
</html>
