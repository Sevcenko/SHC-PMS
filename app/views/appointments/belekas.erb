			<div class="custom-search-input">
				<div class="form-group">
					<%= form_tag(appointments_path, method: "get", id: "search-date-form") do %>
						<%= date_field :search, params[:search], class: "form-control" %>
						<%= button_tag(class: "btn btn-info btn-lg", type: "submit") do %>
							<i class="glyphicon glyphicon-search"></i>
						<% end %>
					<% end %>
				</div>
			</div>
		</form>
		
	</div>
	<div class="col-md-1">
		
			<%#= f.submit "Show", {class: 'btn btn-default'} %>
		
		<% #end %>
	</div>
</div>
