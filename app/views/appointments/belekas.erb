<%#= Time.now.strftime("%d/%m/%Y") %>
<div class="row">
	<div class="col-md-8">
		<h1>Appointments</h1>
	</div>
	<div class="col-md-3">
		<%#= text_field(:appointmentType, :name => 'appointmentType', :value => '2018-07-18') %>
		<!--  cia reikes padaryti kad veiktu ta forma normaliai
		pradziai reikia pasidaryti kad rodytu normaliai apointmentus pagal data -->
		<%#= form_for([@appointment.build]) do |f| %>
		
		<%#= f.date_field(:date, :value => Time.now.strftime('%Y-%m-%d'), :name => 'date_field', :class => 'form-control') %>
		<%#= f.submit({'hh', :class => 'btn btn-default'}) %>
