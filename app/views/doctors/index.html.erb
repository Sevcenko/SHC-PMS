<div class="container">
	<div class="col-md-6">
		<h1>Doctors</h1>
	</div>
	<div class="col-md-6 new_doctor">
		<%= link_to "+ New Doctor", new_doctor_path(@doctor), :class => 'btn btn-success' %>
	</div>
</div>

<% @doctors.each do |doctor| %>
	<div class="well">
		<table class="table">
		  <thead class="thead-dark">
		    <tr>
		      <th scope="col">Name</th>
		      <th scope="col">Surname</th>
		      <th scope="col">DOB</th>
		      <th scope="col">Email</th>
		    </tr>
		  </thead>
		  <tbody>
		    <tr>
		      <td><%= doctor.name.humanize %></td>
		      <td><%= doctor.surname.humanize %></td>
		      <td><%= doctor.birthday %></td>
		      <td><%= doctor.email %></td>
		    </tr>
		  </tbody>
		</table>
		<%= link_to "Read More", doctor_path(doctor), :class => 'btn btn-default' %>
	</div>
<% end %>